<Window x:Class="SimpleRPG.AlchemyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleRPG"
        mc:Ignorable="d"
        Title="AlchemyWindow" Height="300" Width="400">
    <Grid Margin="0,0,2,0">
        <ComboBox x:Name="cbRecipeList" HorizontalAlignment="Left" DisplayMemberPath="RecipeName" Margin="10,46,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Select Recipe" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbRequired" HorizontalAlignment="Left" Margin="10,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="181" Width="366"/>
        <Button x:Name="btnCraft" Content="Craft" HorizontalAlignment="Center" Margin="0,48,0,0" VerticalAlignment="Top" Width="74" Click="btnCraft_Click"/>
    </Grid>
</Window>
